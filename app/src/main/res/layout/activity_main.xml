<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.singlescreenapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/imageView1"
            android:contentDescription="A man who brings artificial intelligence to life."
            android:paddingBottom="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mekan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAdres0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/textAdres1"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#F57F17"
                android:text="CONTACT: "
                android:textColor="#1B5E20"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAdres1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/textAdres2"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#1B5E20"
                android:text="Uncalı Mahallesi 23. Cadde Centek "
                android:textColor="#F57F17"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAdres2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/textAdres3"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#1B5E20"
                android:text="Sitesi C Blok No: 2        ANTALYA"
                android:textColor="#F57F17"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAdres3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/textAdres4"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#1B5E20"
                android:text="0242 229 63 63 | 229 64 64"
                android:textColor="#F57F17"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAdres4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#1B5E20"
                android:text="www.urfasofrasi.com/"
                android:textColor="#F57F17"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acıklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#F57F17"
                android:text="@string/acıklama"
                android:textColor="#1B5E20"
                android:textSize="15sp"
                android:textStyle="bold"

                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
